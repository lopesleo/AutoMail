{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "^/api/email(/.*)?$",
      "dest": "backend/main.py"
    },
    {
      "src": "^/_next/static/(.*)$",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "dest": "frontend/_next/static/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "frontend/$1"
    }
  ]
}
